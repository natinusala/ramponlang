//ramponlang language definition

#ifndef RAMPONLANG_HPP
#define RAMPONLANG_HPP

#define RAMPONLANG_VERSION 5

#include <stdio.h>
#include <stdlib.h>

//Return statement :
//vous avez x
#define vous
#define avez return

//Argv
//prerequis
#define prerequis argv

//Argc
//competences
#define competences argc

//Exit function :
//examen termine x questions repondues
#define examen
#define termine(x) exit(x)
#define questions
#define repondues

//Sizeof
//taille
#define taille sizeof

//C/C++ interoperability
//C : vacances "C"
//C++ : vacances "C++"
#define vacances extern

//Memory allocation
//calloc
//interrogation difficile
#define interrogation
#define difficile calloc

//free
//liberer
#define liberer free

//null
//certificat polynomial
#define certificat
#define polynomial NULL

//Semicolon :
//chut
#define chut ;

//Void type :
//copie vide
#define copie
#define vide void

//Functions call :
//interroger (func) sur (params)
#define interroger(func) func(
#define sur(params...) params)

//Main function :
//se lever lundi pour huit heures {...}
#define se
#define lever
#define lundi
#define pour
#define huit
#define heures int main(int argc, char** argv)

//Functions macro :
//bavarder : printf
#define bavarder printf

//Brackets
//{ : vous sortez une feuille
#define vous
#define sortez
#define une
#define feuille {
//} : faites passer les copies
#define faites
#define passer
#define les
#define copies }

//Variables declaration :
//pour tout relatif x = 8 chut
#define pour
#define tout

//Functions definition :
//definissons relatif y(posons relatif x)
#define definissons
#define posons

//Misc :
//et : ,
#define et ,

//Typedefs :
//bavardage : char*
//naturel : unsigned
//relatif : int
//note : bool
typedef char* bavardage;
typedef unsigned naturel;
typedef int relatif;
typedef bool note;
typedef double reel;
typedef char lettre;

//Booleans
//0 / 1
#define zero 0
#define un 1

//Control blocks :
//If :
//supponsons que (...)
#define supposons
#define que if
//Else / Else if :
//bon tant pis [suppons que (...)]
#define bon
#define tant
#define pis else
//For :
//visitons (trappe relatif x = 0 en refermant si x < 5 en effectuant x++ pour chaque visite)
#define visitons for
#define trappe
#define chaque
#define en ;
#define effectuant
#define visite
#define refermant
#define si

//While :
//preuve de terminaison
#define preuve
#define de
#define terminaison while

//Garbage :
//inductif
#define inductif

#endif
